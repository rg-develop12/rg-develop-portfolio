---
import LinkedInIcon from '../assets/icons/brand-linkedin.svg';
import GitHubIcon from '../assets/icons/brand-github.svg';
import EmailIcon from '../assets/icons/mail.svg';
import ArrowUpIcon from '../assets/icons/arrow-up.svg';
---

<footer class="w-full px-6 sm:px-10 py-8 border-t border-gray-800 bg-[#1A1A2E] text-[#EEEAF7] relative">
  <div class="max-w-7xl mx-auto flex flex-col sm:flex-row items-center sm:items-start justify-between gap-6">
    <div class="flex flex-col gap-2 text-center sm:text-left max-w-md">
      <p class="text-lg sm:text-xl font-medium italic text-gray-300">"La mejor manera de predecir el futuro es construirlo"</p>
      <p class="text-sm sm:text-base text-[#B95FFC] font-semibold">- Listo para construir el tuyo</p>
    </div>

    <div>
      <div class="flex items-center gap-6">
        <a href="https://www.linkedin.com/in/rgdev12/" target="_blank" aria-label="LinkedIn" class="group">
          <LinkedInIcon class="w-8 h-8 text-gray-400 group-hover:text-[#B95FFC] group-hover:scale-110 transition-all duration-300"/>
        </a>
        <a href="mailto:roman.montano12@gmail.com" target="_blank" aria-label="Email" class="group">
          <EmailIcon class="w-8 h-8 text-gray-400 group-hover:text-[#B95FFC] group-hover:scale-110 transition-all duration-300"/>
        </a>
        <a href="https://github.com/rg-develop12/rg-develop-portfolio" target="_blank" aria-label="GitHub" class="group">
          <GitHubIcon class="w-8 h-8 text-gray-400 group-hover:text-[#B95FFC] group-hover:scale-110 transition-all duration-300"/>
        </a>
      </div>

      <button class="scroll-to-top flex items-center gap-2 mt-3 rounded-full py-2 pl-2 pr-3 border border-gray-800 group hover:border-[#B95FFC] transition-all duration-300 cursor-pointer">
        <ArrowUpIcon class="w-4 h-4 text-gray-400 group-hover:text-[#B95FFC] group-hover:scale-110 transition-all duration-300"/>
        <p class="text-sm sm:text-base text-gray-400 group-hover:text-[#B95FFC] font-semibold">Volver arriba</p>
      </button>
    </div>
  </div>

  <div class="w-full h-px bg-gray-800 my-6"></div>
  
  <p class="text-center text-gray-500 text-sm">
    Hecho por <span class="text-gray-300 font-medium">Román González</span> - rgdev © {new Date().getFullYear()}
  </p>
</footer>

<script>
	const button = document.querySelector(".scroll-to-top") as HTMLElement;
	const scrollContainer = document.querySelector("html") as HTMLElement;

	button.addEventListener("click", () => {
		scrollContainer.scrollTo({
			top: 0,
			behavior: "smooth",
		});
	});
</script>
</style>

<script>
	import gsap from 'gsap';
	import { CustomEase } from 'gsap/CustomEase';
	import { SplitText } from 'gsap/SplitText';

	gsap.registerPlugin(CustomEase, SplitText);
	CustomEase.create("hop", ".8, 0, .3, 1");

  function initFloatingIcons() {
		// Flotaci√≥n arriba/abajo
		gsap.to(".floating-icon", {
			y: 10, // Menos desplazamiento para ser m√°s sutil
			duration: 1.5,
			ease: "sine.inOut", 
			repeat: -1, 
			yoyo: true, 
			stagger: {
				each: 0.5,
				from: "random"
			},
			overwrite: "auto"
		});

		// Rotaci√≥n sutil
		gsap.to("#icon1", {
			rotate: "+=10",
			duration: 3.5,
			ease: "sine.inOut",
			repeat: -1,
			yoyo: true,
			overwrite: "auto"
		});

		gsap.to("#icon2", {
			rotate: "-=10",
			duration: 3.5,
			ease: "sine.inOut",
			repeat: -1,
			yoyo: true,
			overwrite: "auto",
			delay: 1.75
		});
	}

	function audienceTextAnimation() {
		gsap.fromTo("#audience-content", 
			{
				opacity: 0, 
				y: -10
			},
			{
				opacity: 1, 
				y: 0, 
				duration: 0.3,
				ease: "power2.out"
			}
		);
  }

  const audienceTexts = {
    all: `¬°Hola! Soy un desarrollador web y me apasiona crear soluciones digitales efectivas. Dise√±o y construyo desde interfaces din√°micas y animadas hasta aplicaciones simples, fluidas y funcionales que resuelven necesidades reales.`,
    recruiters: `¬øBuscas talento? Con +5 a√±os de experiencia, me especializo en frontend web, m√≥vil y escritorio. Puedo crear desde interfaces con animaciones llamativas hasta aplicaciones simples, limpias y completamente funcionales.`,
    pms: `¬øC√≥mo voy?üëÄ Trabajo para que tus ideas lleguen a producci√≥n con claridad y sin fricci√≥n. Me especializo en crear interfaces que combinan buena experiencia de usuario, rendimiento y una implementaci√≥n frontend s√≥lida.`,
    devs: `function getMessage() { return 'A parte de conocer lenguajes de programaci√≥n, frameworks e integraci√≥n de APIs, tambi√©n me intereso en buenas pr√°cticas, rendimiento y experiencia de usuario.' }; console.log(getMessage());`,
    clients: `¬øTienes una idea en mente? Yo me encargo de ayudarte a transformarla en una interfaz usable y confiable. Trabajo contigo para entender tus necesidades y crear soluciones digitales que realmente funcionen para ti y tus usuarios.`,
  };

  function initAudienceSelector() {
    const buttons = Array.from(document.querySelectorAll<HTMLButtonElement>('.audience-btn'));
    const content = document.getElementById('audience-content');
    if(!content || buttons.length === 0) return;

    function setActive(audience: string | undefined) {
      if (!content) return;

      buttons.forEach(b=>{
        const isActive = b.dataset.audience === audience;
        b.classList.toggle('bg-[#e9e7ff]', isActive);
        b.classList.toggle('text-[#1A1A2E]', isActive);
        b.setAttribute('aria-pressed', String(isActive));
      });

      content.textContent = audienceTexts[audience as keyof typeof audienceTexts] || audienceTexts.all;
      audienceTextAnimation();
    }

    buttons.forEach(b=>{
      b.addEventListener('click', ()=> setActive(b.dataset.audience));
      b.addEventListener('keydown', (e)=>{
        if(e.key === 'Enter' || e.key === ' ') { e.preventDefault(); setActive(b.dataset.audience); }
      });
    });

    // Estado inicial
    setActive('all');
  }

  // Inicializar al cargar el DOM
  if (typeof window !== 'undefined'){
    if (document.readyState === 'loading') document.addEventListener('DOMContentLoaded', initAudienceSelector);
    else initAudienceSelector();
  }

  // set para la animaci√≥n de las letras del t√≠tulo "Construyendo" y la palabra subrayada "Interfaces"
	const buildingWord = new SplitText("#building-word", { type: "chars" });
	gsap.set(buildingWord.chars, { 
		yPercent: -100,
		opacity: 0 
	});
	gsap.set(".underline-wrapper", {
		y: "-100%",
		opacity: 0
	})

	// set para los iconos flotantes
	gsap.set(".floating-icon", {
		opacity: 0,
		scale: 0,
	});

  const tl = gsap.timeline({ defaults: { ease: "hop" } });

  tl.to(
		".page-reveal .card",
		{
			clipPath: "polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)",
			duration: 0.75,
		},
		4.4
	).to(
		buildingWord.chars,
		{
			yPercent: 0,
			opacity: 1,
			stagger: 0.05,
			duration: 0.8,
			ease: "bounce.out"
		},
		4.6
	).to(
		".underline-wrapper",
		{
			y: "0%",
			opacity: 1,
			duration: 0.7,
			ease: "power2.out"
		}, 
		"<0.5" // Empieza 0.5s despu√©s de que COMIENCE la animaci√≥n anterior
	).to(
		".title-rest",
		{
			clipPath: "polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)",
			duration: 0.7,
			ease: "power2.out"
		}, 
		"<0.5"
	)
	.to(
		".underline-element",
		{
			scaleX: 1,
			duration: 0.7,
		},
		5.3
	).to(
		".wipe-overlay",
		{
			width: "100%",
			duration: 0.7
		},
		5.80
	).to(
		".floating-icon",
		{
			opacity: 1,
			scale: 1,
			duration: 0.6,
			ease: "back.out(1.7)",
			stagger: 0.1,
			onComplete: initFloatingIcons 
		}, 
		"<0.2" // Empieza 0.2s *despu√©s* de que empiecen las im√°genes
	);
</script>
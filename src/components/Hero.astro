<style>
	.custom-shape-divider-bottom-1763342963 {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    overflow: hidden;
    line-height: 0;
    transform: rotate(180deg);
}

	.custom-shape-divider-bottom-1763342963 svg {
		position: relative;
		display: block;
		width: calc(100% + 1.3px);
		height: 160px;
		transform: rotateY(180deg);
	}

	.custom-shape-divider-bottom-1763342963 .shape-fill {
		fill: #FFFFFF;
	}
</style>

<script>
  import gsap from 'gsap';
	import { CustomEase } from 'gsap/CustomEase';
	import { SplitText } from 'gsap/SplitText';

  gsap.registerPlugin(CustomEase, SplitText);
	CustomEase.create("hop", ".8, 0, .3, 1");

  function iniciarFlotacionIconos() {
		// Flotaci√≥n arriba/abajo
		gsap.to(".floating-icon", {
			y: 10, // Menos desplazamiento para ser m√°s sutil
			duration: 1.5,
			ease: "sine.inOut", 
			repeat: -1, 
			yoyo: true, 
			stagger: {
				each: 0.5,
				from: "random"
			},
			overwrite: "auto"
		});

		// Rotaci√≥n sutil
		gsap.to("#icon1", {
			rotate: "+=10",
			duration: 3.5,
			ease: "sine.inOut",
			repeat: -1,
			yoyo: true,
			overwrite: "auto"
		});

		gsap.to("#icon2", {
			rotate: "-=10",
			duration: 3.5,
			ease: "sine.inOut",
			repeat: -1,
			yoyo: true,
			overwrite: "auto",
			delay: 1.75
		});
	}

  // set para la animaci√≥n de las letras del t√≠tulo "Construyendo" y la palabra subrayada "Interfaces"
	const buildingWord = new SplitText("#building-word", { type: "chars" });
	gsap.set(buildingWord.chars, { 
		yPercent: -100,
		opacity: 0 
	});
	gsap.set(".underline-wrapper", {
		y: "-100%",
		opacity: 0
	})

	// set para los iconos flotantes
	gsap.set(".floating-icon", {
		opacity: 0,
		scale: 0,
	});

  const tl = gsap.timeline({ defaults: { ease: "hop" } });
	const tags = gsap.utils.toArray<HTMLElement>(".tag");

  tl.to(
		".page-reveal .card",
		{
			clipPath: "polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)",
			duration: 0.75,
		},
		4.4
	).to(
		buildingWord.chars,
		{
			yPercent: 0,
			opacity: 1,
			stagger: 0.05,
			duration: 0.8,
			ease: "bounce.out"
		},
		4.6
	).to(
		".underline-wrapper",
		{
			y: "0%",
			opacity: 1,
			duration: 0.7,
			ease: "power2.out"
		}, 
		"<0.5" // Empieza 0.5s despu√©s de que COMIENCE la animaci√≥n anterior
	).to(
		".title-rest",
		{
			clipPath: "polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)",
			duration: 0.7,
			ease: "power2.out"
		}, 
		"<0.5"
	)
	.to(
		".underline-element",
		{
			scaleX: 1,
			duration: 0.7,
		},
		5.3
	).to(
		".wipe-overlay",
		{
			width: "100%",
			duration: 0.7
		},
		5.80
	).to(
		".floating-icon",
		{
			opacity: 1,
			scale: 1,
			duration: 0.6,
			ease: "back.out(1.7)",
			stagger: 0.1,
			onComplete: iniciarFlotacionIconos 
		}, 
		"<0.2" // Empieza 0.2s *despu√©s* de que empiecen las im√°genes
	)
</script>
---
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<div class="preloader">
		<div class="intro-title">
			<h1>Román</h1>
		</div>
		<div class="outro-title">
			<h1>González</h1>
		</div>
	</div>

	<div class="split-overlay">
		<div class="intro-title">
			<h1>Román</h1>
		</div>
		<div class="outro-title">
			<h1>González</h1>
		</div>
	</div>

	<div class="tags-overlay">
		<div class="tag tag-1"><p class="text-sm font-semibold">DESARROLLADOR</p></div>
		<div class="tag tag-2"><p class="text-sm font-semibold">ENTUSIASTA</p></div>
		<div class="tag tag-3"><p class="text-sm font-semibold">COLABORADOR</p></div>
	</div>

	<div class="page-reveal bg-linear-to-br from-slate-950 via-purple-950 to-slate-950">
		<nav>
			<p>RG</p>
		</nav>

		<div class="card">
			<h2>Desarrollador Frontend</h2>
		</div>

		<footer>
			<p>Scroll Down</p>
			<p>Made by rg-develop</p>
		</footer>
	</div>
</Layout>

<style is:global>
	.intro-title h1, .outro-title h1 {
		font-size: 6rem;
		font-weight: bold;
		line-height: 1;
	}

	.preloader, .split-overlay, .tags-overlay {
		position: fixed;
		width: 100vw;
		height: 100dvh;
		justify-content: center;
		align-items: center;
		display: flex;
		gap: 1rem;
	}

	.preloader, .split-overlay {
		background-color: #0a0a0a;
		color: #fff;
	}

	.preloader, .tags-overlay {
		z-index: 2;
	}

	.split-overlay {
		z-index: 1;
	}

	.tag {
		position: absolute;
		width: max-content;
		color: #5a5a5a;
		overflow: hidden;
	}

	.tag-1 {
		top: 15%;
		left: 15%;
	}

	.tag-2 {
		bottom: 15%;
		left: 25%;
	}

	.tag-3 {
		bottom: 30%;
		right: 15%;
	}

	.card {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 30%;
		height: 70%;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: #fff;
		clip-path: polygon(0% 50%, 100% 50%, 100% 50%, 0% 50%);
	}

	.card h2 {
		text-align: center;
		width: 100%;
		font-size: 3rem;
	}

	.card .char span {
		position: relative;
		display: inline-block;
		transform: translateY(100%);
		will-change: transform;
	}

	.intro-title .char, .outro-title .char, .card .char {
		position: relative;
		display: inline-block;
		overflow: hidden;
	}

	.intro-title .char, .outro-title .char {
		margin-top: 0.75rem;
	} 

	.intro-title .char span, .outro-title .char span, .tag .word {
		position: relative;
		display: inline-block;
		transform: translateY(-100%);
		will-change: transform;
	}

	.intro-title .first-char {
		transform-origin: top left;
	}

	.page-reveal {
		position: relative;
		width: 100%;
		height: 100%;
		min-height: 100dvh;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
		clip-path: polygon(0 48%, 0 48%, 0 52%, 0 52%);
		z-index: 2;
	}

	nav, footer {
		position: relative;
		width: 100vw;
		padding: 2em;
		display: flex;
		justify-content: space-between;
		align-items: center;
		z-index: 2;
		color: #fff;
	}

	@media (max-width: 1000px) {
		.intro-title h1, .outro-title h1 {
			font-size: 2.5rem;
		}

		.card {
			width: 75%;
		}

		.card h2 {
			font-size: 2.5rem;
		}
	}
</style>

<script>
	import gsap from 'gsap';
	import { CustomEase } from 'gsap/CustomEase';
	import { SplitText } from 'gsap/SplitText';

	gsap.registerPlugin(CustomEase, SplitText);
	CustomEase.create("hop", ".8, 0, .3, 1");

	const splitTextElements = (selector: any, type = "words,chars", addFirstChar = false) => {
    const elements = document.querySelectorAll(selector);

    elements.forEach((element) => {
      const splitText = new SplitText(element, { type: type, wordsClass: "word", charsClass: "char" });

      if (type.includes("chars")) {
        splitText.chars.forEach((char: any, index: number) => {
          const originalText = char.textContent;
          char.innerHTML = `<span>${originalText}</span>`;

          if (addFirstChar && index === 0) {
            char.classList.add("first-char");
          }
        });
      }
    });
  }

	splitTextElements(".intro-title h1", "chars", true);
  splitTextElements(".outro-title h1", "chars", true);
  splitTextElements(".tag p", "words");
  splitTextElements(".card h2", "words, chars", true);

	const isMobile = window.innerWidth <= 1000;

	const tl = gsap.timeline({ defaults: { ease: "hop" } });
	const tags = gsap.utils.toArray<HTMLElement>(".tag");

	// Animación para las tags
	tags.forEach((tag, index) => {
		tl.to(
			tag.querySelectorAll("p .word"),
			{ 
				y: "0%",
				duration: 0.6
			},
			0.5 + index * 0.1
		);
	});

	// Animación para el título del prelaoder
	tl.to(
		[".preloader .intro-title .char span", ".preloader .outro-title .char span"],
		{
			y: "0%",
			duration: 0.4,
			stagger: 0.05
		},
		0.2
	).to(
		[".preloader .intro-title .char:not(.first-char) span", ".preloader .outro-title .char:not(.first-char) span"],
		{
			y: "100%",
			duration: 0.4,
			stagger: 0.05
		},
		1.3
	).to(
		".preloader .intro-title .first-char",
		{
			x: isMobile ? "9rem" : "20.25rem",
			fontSize: isMobile ? "3rem" : "8rem",
			duration: 0.7
		},
		2.5
	).to(
		".preloader .outro-title .first-char",
		{
			x: isMobile ? "0.5rem" : "1.35rem",
			y: "15%",
			fontSize: isMobile ? "3rem" : "8rem",
			duration: 0.7
		},
		2.5
	).to(
		".preloader .intro-title .first-char",
		{
			y: "-100%",
			duration: 0.3,
		},
		3.2
	).to(
		".preloader .outro-title .first-char",
		{
			y: "-85%",
			duration: 0.3,
		},
		3.2
	).to(
		".page-reveal",
		{
			clipPath: "polygon(0 48%, 100% 48%, 100% 52%, 0 52%)",
			duration: 0.7,
		},
		3.6
	);

	// Animación para las tags saliendo
	tags.forEach((tag, index) => {
		tl.to(
			tag.querySelectorAll("p .word"),
			{ 
				y: "100%",
				duration: 0.3
			},
			3.8 + index * 0.1
		);
	});

	tl.to(
		[".preloader", ".split-overlay"],
		{
			y: (i) => (i === 0 ? "-50%" : "50%"),
			duration: 1,
		},
		4.5
	).to(
		".page-reveal",
		{
			clipPath: "polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)",
			duration: 0.7,
		},
		4.7
	).to(
		".page-reveal .card",
		{
			clipPath: "polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%)",
			duration: 0.75,
		},
		4.9
	).to(
		".page-reveal .card h2 .char span",
		{
			y: "0%",
			duration: 0.4,
			stagger: 0.05
		},
		5
	);
</script>
